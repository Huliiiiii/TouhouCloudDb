{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"paths": {
			"config/*": ["./src/config/*"],
			"component/*": ["./src/component/*"],
			"lib/*": ["./lib/*"],
		},
		"rootDir": ".",
		"sourceMap": true,
		"target": "ESNext",
	},
}
